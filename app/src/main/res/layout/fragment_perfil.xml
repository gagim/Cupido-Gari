<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_google_signin_btn_text_dark_default"
    tools:context="com.cursoandroid.cupidogari.fragment.PerfilFragment"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="25dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="42dp"
        android:layout_marginStart="42dp"
        android:background="@color/common_google_signin_btn_text_dark_pressed"
        android:backgroundTintMode="src_over"
        app:civ_border_color="#FFCC33"
        app:civ_border_width="2dp"
        app:srcCompat="@drawable/usuario"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/textView5"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="42dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="42dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@color/common_google_signin_btn_text_dark_pressed"
        android:text="Perfil"
        android:textAlignment="center"
        android:textColor="@color/perfil"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtNomeUsuario"
        android:layout_alignLeft="@+id/imgUsuario"
        android:layout_alignStart="@+id/imgUsuario"
        android:background="@android:color/background_light"
        android:text="Nome Do Usuario:"
        android:textColor="@color/perfil"
        android:textSize="@dimen/unique"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="136dp"
        app:layout_constraintLeft_toLeftOf="@+id/txtNomeUsuario" />

    <TextView
        android:id="@+id/txtNomeUsuario"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView5"
        android:layout_marginEnd="11dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/edit_perfil"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="@dimen/unique"
        app:layout_constraintRight_toLeftOf="@+id/txtMudarNome"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/txtMudarNome"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="11dp" />

    <Button
        android:id="@+id/btnSalvar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtNomeUsuario"
        android:layout_alignBottom="@+id/txtNomeUsuario"
        android:layout_alignEnd="@+id/imgUsuario"
        android:layout_alignRight="@+id/imgUsuario"
        android:background="@drawable/edit_perfil"
        android:text="Salvar"
        android:textColor="@color/perfil"
        android:textSize="@dimen/unique"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="30dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/txtMudarFoto"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_perfil"
        android:text="Mudar foto"
        android:textAlignment="center"
        android:textColor="@color/perfil"
        android:textSize="@dimen/unique"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/img"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="10dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/txtMudarNome"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_perfil"
        android:text="Mudar nome"
        android:textAlignment="center"
        android:textColor="@color/perfil"
        android:textSize="@dimen/unique"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/btnSalvar"
        android:layout_marginEnd="32dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="23dp"
        android:layout_marginRight="32dp" />

</android.support.constraint.ConstraintLayout>
